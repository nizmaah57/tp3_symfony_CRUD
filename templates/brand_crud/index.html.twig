{% extends 'base.html.twig' %}

{% block title %}Brand index{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>Liste des marques</h1>

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for brand in brands %}
                    <tr>
                        <td>{{ brand.id }}</td>
                        <td>{{ brand.name }}</td>
                        <td class="text-center">
                            <div class="btn-group" role="group">
                                <a class="btn btn-info" href="{{ path('app_brand_crud_show', {'id': brand.id}) }}">Détails</a>
                                <a class="btn btn-warning" href="{{ path('app_brand_crud_edit', {'id': brand.id}) }}">Modifier</a>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">Aucun enregistrement trouvé</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <a class="btn btn-primary" href="{{ path('app_brand_crud_new') }}">Créer une nouvelle marque</a>
        <br/>
        <a class="btn btn-secondary" href="{{ path('app_admin_dashboard') }}">Retour au dashboard</a>
    </div>
{% endblock %}
